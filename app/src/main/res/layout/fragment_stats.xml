<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/daydream_padding_left"
        android:paddingTop="@dimen/daydream_padding_top"
        android:paddingRight="@dimen/daydream_padding_middle"
        android:paddingBottom="@dimen/daydream_padding_bottom"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/leftFixations"
                android:text="0"
                style="@style/Stat"/>
            <TextView
                android:layout_column="2"
                android:text="@string/long_fixations"
                style="@style/Stat"/>

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/leftSaccades"
                android:text="0"
                style="@style/Stat"/>
            <TextView
                android:text="@string/per_min"
                style="@style/Stat"
                android:layout_marginStart="0dp"/>
            <TextView
                android:text="@string/saccade_rate"
                style="@style/Stat"/>

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:id="@+id/leftBlinkRate"
                android:text="0"
                style="@style/Stat"/>
            <TextView
                android:text="@string/per_min"
                style="@style/Stat"
                android:layout_marginStart="0dp"/>
            <TextView
                android:text="@string/blink_rate"
                style="@style/Stat"/>
        </GridLayout>

        <ProgressBar
            android:id="@+id/leftProgress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/daydream_padding_middle"
        android:paddingTop="@dimen/daydream_padding_top"
        android:paddingRight="@dimen/daydream_padding_right"
        android:paddingBottom="@dimen/daydream_padding_bottom"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/rightFixations"
                android:text="0"
                style="@style/Stat"/>
            <TextView
                android:layout_column="2"
                android:text="@string/long_fixations"
                style="@style/Stat"/>

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/rightSaccades"
                android:text="0"
                style="@style/Stat"/>
            <TextView
                android:text="@string/per_min"
                style="@style/Stat"
                android:layout_marginStart="0dp"/>
            <TextView
                android:text="@string/saccade_rate"
                style="@style/Stat"/>

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:id="@+id/rightBlinkRate"
                android:text="0"
                style="@style/Stat"/>
            <TextView
                android:text="@string/per_min"
                style="@style/Stat"
                android:layout_marginStart="0dp"/>
            <TextView
                android:text="@string/blink_rate"
                style="@style/Stat"/>
        </GridLayout>

        <ProgressBar
            android:id="@+id/rightProgress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"/>

    </RelativeLayout>

</LinearLayout>